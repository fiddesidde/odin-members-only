<% layout('layouts/boilerplate') %>
<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row" style="width: 75%;">
        <div class="card shadow">
            <div class="card-body">
                <h5 class="card-title">Edit Post</h5>
                <form action="<%= baseUrl %>messages/<%= message._id %>?_method=PUT" method="POST" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="title" autofocus
                            required value="<%= message.title %>">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="content">Message</label>
                        <textarea class="form-control" type="text" id="content" name="content" rows="5" required><%= message.content %></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>